{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "*"
            ],
            "@features/*": [
                "features/*"
            ],
            "@src/*": [
                "src/*"
            ],
            "@modules/*": [
                "src/modules/*"
            ],
            "@mongo/*": [
                "src/modules/*"
            ],
            "@characters/*": [
                "src/modules/*"
            ]
        }
    },
    "include": [
        "index.ts",
        "cli.ts",
        "plugins/**/*.ts",
        "src/**/*.ts",
        "projects/**/*.ts"
    ],
    "exclude": [
        "**/scaffolding/**/*"
    ]
    
}