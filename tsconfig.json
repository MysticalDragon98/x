{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "experimentalDecorators": true
    },
    "include": [
        "index.ts",
        "cli.ts",
        "plugins/**/*.ts",
        "src/**/*.ts",
        "projects/**/*.ts"
    ]
}